[bumpversion]
current_version = 0.1.0
parse = (?P<major>\d+)\.(?P<minor>\d+)\.(?P<patch>\d+)(\.(?P<stage>[a-z]+)(?P<build>\d+))?
serialize =
	{major}.{minor}.{patch}.{stage}{build}
	{major}.{minor}.{patch}
tag_name = {new_version}

[bumpversion:part:stage]
optional_value = prod
values =
	dev
	rc
	prod

[bumpversion:part:build]

[bumpversion:file:build.py]
search = version = '{current_version}'
replace = version = '{new_version}'

[bumpversion:file:src/mpetk/__init__.py]
search = {current_version}
replace = {new_version}

[bumpversion:file:src/mpetk/lims/__init__.py]
search = {current_version}
replace = {new_version}

[bumpversion:file:src/mpetk/aibsmw/__init__.py]
search = {current_version}
replace = {new_version}

[bumpversion:file:src/mpetk/zro/__init__.py]
search = {current_version}
replace = {new_version}

[bumpversion:file:src/mpetk/mpeconfig/python_3/__init__.py]
search = {current_version}
replace = {new_version}

[bumpversion:file:src/mpetk/mpeconfig/python_2/__init__.py]
search = {current_version}
